<%- include('../partials/header.ejs') %>
<div class="main-body">
    <div class="container body-container">
        <div class="row mb-4">
            <div class="col-12">
                <h5><strong>Edit <%= event.title %> Details</strong></h5>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <img class="img-fluid event-img" src="<%= event.image %>" alt="Flyer for <%= event.title %>">
            </div>
            <div class="col-lg-9">
                <form method="POST" action="/events/<%= event._id %>?_method=PUT">
                    <!-- Category -->
                    <div class="form-row align-items-center">
                        <label for="category" class="col-sm-3">Category:</label>
                        <div class="col-sm-9">
                            <select id="category" class="form-control" name="category" required>
                                <option disabled value="">---Select a Category---</option>
                                <option value="Physical Meetup Events" <%= event.category === 'Physical Meetup Events' ? 'selected' : '' %>>Physical Meetup Events</option>
                                <option value="Online Meetup Events" <%= event.category === 'Online Meetup Events' ? 'selected' : '' %>>Online Meetup Events</option>
                                <option value="Fund Raising Event" <%= event.category === 'Fund Raising Event' ? 'selected' : '' %>>Fund Raising Event</option>
                                <option value="Outdoor Events" <%= event.category === 'Outdoor Events' ? 'selected' : '' %>>Outdoor Events</option>
                                <option value="Outreach Events" <%= event.category === 'Outreach Events' ? 'selected' : '' %>>Outreach Events</option>
                            </select>
                        </div>
                    </div>
                
                    <!-- Adjusting date format for startDate and endDate -->

                    <div class="form-row align-items-center">
                        <div class="col-sm-3">
                            <label for="title">Title:</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="title" name="title" value="<%= event.title %>" required>
                        </div>
                    </div>
                    <div class="form-row align-items-center">
                        <div class="col-sm-3">
                            <label for="startDate">Start Date and Time:</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="datetime-local" class="form-control" id="startDate" name="startDate" value="<%= event.startDate.slice(0,16) %>" required>
                        </div>
                    </div>
                    <div class="form-row align-items-center">
                        <div class="col-sm-3">
                            <label for="endDate">End Date and Time:</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="datetime-local" class="form-control" id="endDate" name="endDate" value="<%= event.endDate.slice(0,16) %>" required>
                        </div>
                    </div>
                    <div class="form-row align-items-center">
                        <div class="col-sm-3">     
                            <label for="location">Location:</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="location" name="location" value="<%= event.location %>" required>
                        </div>
                    </div>
                    <div class="form-row align-items-center">
                        <div class="col-sm-3">
                            <label for="details">Details:</label>
                        </div>
                        <div class="col-sm-9">
                            <textarea class="form-control" id="details" name="details" rows="4" required><%= event.details %></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
